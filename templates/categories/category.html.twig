{% extends 'base.html.twig' %}

{% block container %}

{% endblock %}
{% block body %}

    <div class="col-lg-12 text-center">
        <h1>{{ category.Name }} </h1>
        <h3>{{ category.description }}</h3>
    </div><!-- /.col-lg-4 -->

    <div class="row">
        {% for key, post in posts %}
        <div class="d-md-flex flex-md-equal col-lg-4">
            <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
                <div class="my-3 p-3">
                    <h4 class="display-5">{{ post.title }}</h4>
                    <p class="lead">{{ post.shortDescription }}</p>
                </div>
                <div class="bg-white shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                    <img  src="{{ asset('images/')}}{{ post.image }}" alt="Generic placeholder image" width="100%">
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}